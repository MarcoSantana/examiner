<%- model_class = Distractor -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:question_id) %>:</strong></dt>
  <dd><%= @distractor.question_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:option) %>:</strong></dt>
  <dd><%= @distractor.option %></dd>
  <dt><strong><%= model_class.human_attribute_name(:position) %>:</strong></dt>
  <dd><%= @distractor.position %></dd>
  <dt><strong><%= model_class.human_attribute_name(:difficulty) %>:</strong></dt>
  <dd><%= @distractor.difficulty %></dd>
  <dt><strong><%= model_class.human_attribute_name(:visible) %>:</strong></dt>
  <dd><%= @distractor.visible %></dd>
  <dt><strong><%= model_class.human_attribute_name(:locked) %>:</strong></dt>
  <dd><%= @distractor.locked %></dd>
  <dt><strong><%= model_class.human_attribute_name(:content) %>:</strong></dt>
  <dd><%= @distractor.content %></dd>
  <dt><strong><%= model_class.human_attribute_name(:right) %>:</strong></dt>
  <dd><%= @distractor.right %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              distractors_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_distractor_path(@distractor), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              distractor_path(@distractor),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
