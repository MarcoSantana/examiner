<%= form_for @quiz, :html => { :class => "form-horizontal quiz" } do |f| %>

  <% if @quiz.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@quiz.errors.count, "error") %> prohibited this quiz from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @quiz.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :application_date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :application_date, :class => 'form-control' %>
    </div>
    <%=f.error_span(:application_date) %>
  </div>
  <div class="form-group">
    <%= f.label :difficulty, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :difficulty, :class => 'form-control' %>
    </div>
    <%=f.error_span(:difficulty) %>
  </div>
  <div class="form-group">
    <%= f.label :visible, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :visible, :class => 'form-control' %>
    </div>
    <%=f.error_span(:visible) %>
  </div>
  <div class="form-group">
    <%= f.label :locked, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :locked, :class => 'form-control' %>
    </div>
    <%=f.error_span(:locked) %>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>
  <div class="form-group">
    <%= f.label :duration, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :duration, :class => 'form-control' %>
    </div>
    <%=f.error_span(:duration) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                quizzes_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
