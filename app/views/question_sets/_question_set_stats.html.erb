<div class="row">
  <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
    <div class="form-group">
      <%= f.label :difficulty, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.number_field :difficulty, :class => 'form-control', min: 0, max: 1.0, step: 0.1 %>
      </div>
      <div class="col-lg-2">
        <div class="progress">
              <div class="progress-bar" role="progressbar" aria-valuenow="<%= (@question_set.difficulty)*100 %>"
              aria-valuemin="0" aria-valuemax="100" style="width:<%= (@question_set.difficulty)*100 %>%">
              <%= @question_set.difficulty  %>
              </div>
        </div>
      </div>
      <%=f.error_span(:difficulty) %>
    </div>
  </div>
  <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
    <div class="form-group">
      <%= f.label :visible, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.check_box :visible, :class => 'form-control' %>
      </div>
      <%=f.error_span(:visible) %>
    </div>
  </div>
  <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
    <div class="form-group">
      <%= f.label :locked, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.check_box :locked, :class => 'form-control' %>
      </div>
      <%=f.error_span(:locked) %>
    </div>
  </div>

  <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
    <div class="form-group">
      <%= f.label :subject, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.collection_select(:subject_id, Subject.all, :id, :content, {},{:size => 1, :selected => :subject_id, :class => 'form-control'}) %>
      </div>
      <%=f.error_span(:visible) %>
    </div>
  </div>
  <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
    <div class="form-group">
      <%= f.label :position, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.number_field :position, :class => 'form-control', min: 1, step: 1 %>
      </div>
      <%=f.error_span(:position) %>
    </div>
  </div>

</div>
