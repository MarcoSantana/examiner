<%- model_class = QuestionSet -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:subject_id) %>:</strong></dt>
  <dd><%= @question_set.subject_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @question_set.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:difficulty) %>:</strong></dt>
  <dd><%= @question_set.difficulty %></dd>
  <dt><strong><%= model_class.human_attribute_name(:visible) %>:</strong></dt>
  <dd><%= @question_set.visible %></dd>
  <dt><strong><%= model_class.human_attribute_name(:locked) %>:</strong></dt>
  <dd><%= @question_set.locked %></dd>
  <dt><strong><%= model_class.human_attribute_name(:position) %>:</strong></dt>
  <dd><%= @question_set.position %></dd>
  <dt><strong><%= model_class.human_attribute_name(:content) %>:</strong></dt>
  <dd><%= @question_set.to_s %></dd>
</dl>
<dl class="dl-horizontal">
  <% @question_set.questions.each  do  |question|  %>
  <dt></dt>
  <dd><%= question.to_s %></dd>
  <dd><%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_question_path(question), :class => 'btn btn-default btn-xs' %></dd>
  <% end %>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              question_sets_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_question_set_path(@question_set), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              question_set_path(@question_set),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
