<%= form_for @picture, :html => { :class => "form-horizontal picture" } do |f| %>

  <% if @picture.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@picture.errors.count, "error") %> prohibited this picture from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @picture.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :file_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.file_field :file_name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:file_name) %>
  </div>
  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:user_id) %>
  </div>
  <div class="form-group">
    <%= f.label :question_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :question_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:question_id) %>
  </div>
  <div class="form-group">
    <%= f.label :size, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :size, :class => 'form-control' %>
    </div>
    <%=f.error_span(:size) %>
  </div>
  <div class="form-group">
    <%= f.label :format, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :format, :class => 'form-control' %>
    </div>
    <%=f.error_span(:format) %>
  </div>
  <div class="form-group">
    <%= f.label :additional_code, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :additional_code, :class => 'form-control' %>
    </div>
    <%=f.error_span(:additional_code) %>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>
  <div class="form-group">
    <%= f.label :in_line, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :in_line, :class => 'form-control' %>
    </div>
    <%=f.error_span(:in_line) %>
  </div>
  <div class="form-group">
    <%= f.label :visible, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :visible, :class => 'form-control' %>
    </div>
    <%=f.error_span(:visible) %>
  </div>
  <div class="form-group">
    <%= f.label :locked, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :locked, :class => 'form-control' %>
    </div>
    <%=f.error_span(:locked) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                pictures_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
